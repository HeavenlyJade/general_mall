.tabBlock {
  position: relative;
  background: #fff;
}
.tabBlock .tab {
  position: relative;
  display: flex;
  font-size: 28rpx;
  padding-bottom: 15rpx;
  white-space: nowrap;
}
.tabBlock .tab__item {
  flex: 1;
  text-align: center;
  line-height: 90rpx;
  color: #333;
}
.tabBlock .tab__item--active {
  color: #007aff;
}
.tabBlock .tab__item-title {
  margin: 0 40rpx;
}
.tabBlock .tab__line {
  display: block;
  height: 6rpx;
  position: absolute;
  bottom: 15rpx;
  left: 0;
  z-index: 1;
  border-radius: 3rpx;
  position: relative;
  background: #007aff;
}
