.page {
  background: #f5f5f5;
  min-height: 100vh;
}
.video-banner {
  position: relative;
  width: 100%;
  height: 400rpx;
  background: #fff;
}
.video-banner image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.brand-intro {
  margin: 20rpx;
}
.brand-intro .brand-content {
  position: relative;
  width: 100%;
  height: 180rpx;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  border-radius: 20rpx;
  overflow: hidden;
}
.brand-intro .brand-content .content-overlay {
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.brand-intro .brand-content .content-overlay .text-container {
  width: 70%;
  padding: 20rpx 30rpx;
  text-align: center;
}
.brand-intro .brand-content .content-overlay .text-container :deep(rich-text) {
  font-size: 24rpx;
  color: #333;
  line-height: 1.6;
}
.brand-intro .brand-content .content-overlay .text-container :deep(rich-text) ._div {
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.brand-intro .brand-content .content-overlay .text-container :deep(rich-text) ._div ._strong {
  display: block;
  font-size: 28rpx;
  margin-bottom: 8rpx;
}
.product-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 30rpx;
  padding: 20rpx 40rpx;
}
.product-grid .product-item {
  position: relative;
  height: 460rpx;
  width: 280rpx;
  margin: 0 auto;
  background: #f8f8f8;
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}
.product-grid .product-item image {
  width: 220rpx;
  height: 380rpx;
  object-fit: contain;
  margin-bottom: 20rpx;
}
.product-grid .product-item .product-info {
  position: relative;
  width: 100%;
  text-align: center;
  padding: 10rpx;
  bottom: auto;
  left: auto;
  -webkit-transform: none;
          transform: none;
  background: none;
}
.product-grid .product-item .product-info .name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.product-grid .product-item .product-info .sub-name {
  font-size: 24rpx;
  color: #666;
}
.collection-series {
  display: flex;
  padding: 20rpx;
  gap: 20rpx;
}
.collection-series .collection-item {
  flex: 1;
  height: 500rpx;
  position: relative;
  border-radius: 12rpx;
  overflow: hidden;
}
.collection-series .collection-item image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.collection-series .collection-item .collection-info {
  position: absolute;
  left: 20rpx;
  top: 20rpx;
  color: #0066cc;
}
.collection-series .collection-item .collection-info .name {
  font-size: 40rpx;
  font-weight: bold;
}
.collection-series .collection-item .collection-info .sub-name {
  font-size: 28rpx;
}
.wholesale-section {
  padding: 40rpx 30rpx;
  background: #fff;
}
.wholesale-section .title {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 20rpx;
}
.wholesale-section .desc {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
  line-height: 1.6;
}
.wholesale-section .wholesale-banner {
  position: relative;
  height: 300rpx;
  border-radius: 12rpx;
  overflow: hidden;
}
.wholesale-section .wholesale-banner image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}
.wholesale-section .wholesale-banner .banner-text {
  position: absolute;
  left: 40rpx;
  top: 40rpx;
  color: #d81e06;
  font-size: 40rpx;
  font-weight: bold;
}
.wholesale-section .wholesale-banner .sub-text {
  position: absolute;
  left: 40rpx;
  top: 100rpx;
  color: #333;
  font-size: 28rpx;
}
.category-section {
  margin-bottom: 40rpx;
}
.category-section .brand-intro {
  margin: 20rpx;
}
