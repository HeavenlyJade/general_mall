.icon {
  font-family: "HMfont-home" !important;
  font-size: 26rpx;
  font-style: normal;
}
.icon.sheng:before {
  content: "\e737";
}
.icon.jiang:before {
  content: "\e736";
}
.price_count {
  color: #fa436a;
  font-size: 14px;
}
