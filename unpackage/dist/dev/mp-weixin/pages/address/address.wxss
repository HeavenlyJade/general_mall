page {
  padding-bottom: 120rpx;
  background-color: #f8f8f8;
}
.content {
  position: relative;
}
.address-container {
  padding: 0 20rpx;
}
.list {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  background: #fff;
  position: relative;
  margin: 20rpx 0;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.03);
}
.list .delete-btn {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  width: 40rpx;
  height: 40rpx;
  line-height: 36rpx;
  text-align: center;
  font-size: 36rpx;
  color: #999;
  z-index: 10;
  border-radius: 50%;
  background-color: #f5f5f5;
}
.list .delete-btn:active {
  background-color: #eee;
}
.wrapper {
  display: flex;
  flex-direction: column;
  flex: 1;
}
.address-box {
  display: flex;
  flex-direction: column;
}
.address-box .user-info {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}
.address-box .user-info .receiver_name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-right: 20rpx;
}
.address-box .user-info .receiver_phone {
  font-size: 30rpx;
  color: #333;
}
.address-box .address {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
}
.address-box .address-store {
  font-size: 28rpx;
  color: #666;
  line-height: 1.4;
  margin-top: 4rpx;
}
.action-box {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1px solid #f1f1f1;
}
.action-box .default-selector {
  display: flex;
  align-items: center;
  padding: 4rpx 8rpx;
  border-radius: 4rpx;
}
.action-box .default-selector:active {
  background-color: #f8f8f8;
}
.action-box .default-selector .default-circle {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 1px solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 8rpx;
  position: relative;
  background-color: #fff;
  transition: all 0.2s;
}
.action-box .default-selector .default-circle.is-default {
  border-color: #E84339;
  background-color: #fff;
}
.action-box .default-selector .default-circle .default-check {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #E84339;
  transition: -webkit-transform 0.2s;
  transition: transform 0.2s;
  transition: transform 0.2s, -webkit-transform 0.2s;
  -webkit-transform: scale(0);
          transform: scale(0);
}
.action-box .default-selector .default-circle .default-check:active {
  -webkit-transform: scale(0.8);
          transform: scale(0.8);
}
.action-box .default-selector .default-circle.is-default .default-check {
  -webkit-transform: scale(1);
          transform: scale(1);
}
.action-box .default-selector .default-text {
  color: #666;
  font-size: 26rpx;
  transition: color 0.2s;
}
.action-box .default-selector .default-text.is-default {
  color: #E84339;
}
.action-box .btn-box {
  display: flex;
  align-items: center;
}
.action-box .btn-box .btn {
  font-size: 26rpx;
  padding: 8rpx 24rpx;
  border-radius: 4rpx;
  margin-left: 16rpx;
  transition: all 0.2s;
}
.action-box .btn-box .btn:active {
  opacity: 0.8;
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
}
.action-box .btn-box .copy-btn {
  color: #333;
  border: 1px solid #eee;
  background-color: #fff;
}
.action-box .btn-box .edit-btn {
  color: #333;
  border: 1px solid #eee;
  background-color: #fff;
}
.add-btn {
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  bottom: 16rpx;
  z-index: 95;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 690rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #E84339;
  border-radius: 10rpx;
  box-shadow: 1px 2px 5px rgba(232, 67, 57, 0.4);
  transition: all 0.2s;
}
.add-btn:active {
  -webkit-transform: translateY(2rpx);
          transform: translateY(2rpx);
  opacity: 0.9;
}
.add-btn .add-icon {
  font-size: 30rpx;
  margin-right: 8rpx;
}
