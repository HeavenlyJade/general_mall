.category-list {
  width: 100%;
  background-color: #fff;
  display: flex;
}
.category-list .left {
  width: 24%;
  left: 0rpx;
  background-color: #f2f2f2;
}
.category-list .left .row {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.category-list .left .row .text {
  width: 100%;
  position: relative;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  color: #3c3c3c;
}
.category-list .left .row .text .block {
  position: absolute;
  width: 0rpx;
  left: 0;
}
.category-list .left .row.on {
  height: 100rpx;
  background-color: #fff;
}
.category-list .left .row.on .text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d2d2d;
}
.category-list .left .row.on .text .block {
  width: 10rpx;
  height: 80%;
  top: 10%;
  background-color: #f06c7a;
}
.category-list .right {
  width: 76%;
  left: 24%;
}
.category-list .right .category {
  width: 94%;
  padding: 20rpx 3%;
}
.category-list .right .category .banner {
  width: 100%;
  height: 5.5rem;
  border-radius: 10rpx;
  overflow: hidden;
  box-shadow: 0rpx 5rpx 20rpx rgba(0, 0, 0, 0.3);
}
.category-list .right .category .banner image {
  width: 100%;
  height: 5.5rem;
}
.category-list .right .category .list {
  margin-top: 40rpx;
  width: 120%;
  display: flex;
  flex-wrap: wrap;
}
.category-list .right .category .list .box {
  width: 23.8133333333vw;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
}
.category-list .right .category .list .box image {
  width: 60%;
  height: 14.288vw;
}
.category-list .right .category .list .box .text {
  margin-top: 5rpx;
  width: 100%;
  display: flex;
  justify-content: center;
  font-size: 26rpx;
}
