.category-list {
  width: 100%;
  background-color: #fff;
  display: flex;
}
.category-list .left {
  width: 24%;
  left: 0rpx;
  background-color: #f2f2f2;
}
.category-list .left .row {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
}
.category-list .left .row .text {
  width: 100%;
  position: relative;
  font-size: 28rpx;
  display: flex;
  justify-content: center;
  color: #3c3c3c;
}
.category-list .left .row .text .block {
  position: absolute;
  width: 0rpx;
  left: 0;
}
.category-list .left .row.on {
  height: 100rpx;
  background-color: #fff;
}
.category-list .left .row.on .text {
  font-size: 30rpx;
  font-weight: 600;
  color: #2d2d2d;
}
.category-list .left .row.on .text .block {
  width: 10rpx;
  height: 80%;
  top: 10%;
  background-color: #f06c7a;
}
.category-list .right {
  width: 76%;
  left: 24%;
}
.category-list .right .product-list {
  padding: 20rpx;
}
.category-list .right .product-list .product-item {
  width: 100%;
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 12rpx;
  overflow: hidden;
  display: flex;
}
.category-list .right .product-list .product-item image {
  width: 200rpx;
  height: 200rpx;
  background: #f5f5f5;
}
.category-list .right .product-list .product-item .info {
  flex: 1;
  padding: 16rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.category-list .right .product-list .product-item .info .name {
  font-size: 28rpx;
  color: #333;
  line-height: 1.4;
  height: 80rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.category-list .right .product-list .product-item .info .price-cart {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.category-list .right .product-list .product-item .info .price-cart .price .current {
  color: #f06c7a;
  font-size: 32rpx;
  font-weight: bold;
}
.category-list .right .product-list .product-item .info .price-cart .price .original {
  color: #999;
  font-size: 24rpx;
  text-decoration: line-through;
  margin-left: 12rpx;
}
.category-list .right .product-list .product-item .info .price-cart .cart-icon {
  width: 50rpx;
  height: 50rpx;
}
.category-list .right .product-list .product-item .info .price-cart .cart-icon image {
  width: 100%;
  height: 100%;
  background: none;
}
.category-list .right .loading,
.category-list .right .no-more {
  text-align: center;
  color: #999;
  font-size: 24rpx;
  padding: 20rpx 0;
}
