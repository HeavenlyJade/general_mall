@charset "UTF-8";
.tj-column {
  /* position: absolute; */
  height: 0.1rem;
  /* width: 30%; */
  flex-direction: row;
  display: flex;
}
.tj-item {
  margin-left: 0.5rem;
  width: 33%;
  flex-direction: row;
  font-size: 0.76rem;
  color: #75787d;
}
.order-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  background: #fff;
  margin-top: 16rpx;
  /* 多条商品 */
  /* 单条商品 */
}
.order-item .i-top {
  display: flex;
  align-items: center;
  height: 80rpx;
  padding-right: 30rpx;
  font-size: 0.9rem;
  color: #222222;
  position: relative;
}
.order-item .i-top .time {
  margin-right: 0;
  flex: 1;
}
.order-item .i-top .state {
  color: #666666;
}
.order-item .i-top .del-btn {
  padding: 10rpx 0 10rpx 36rpx;
  font-size: 0.7rem;
  color: #aaaaaa;
  position: relative;
}
.order-item .i-top .del-btn:after {
  content: "";
  width: 0;
  height: 30rpx;
  border-left: 1px solid #333333;
  position: absolute;
  left: 20rpx;
  top: 50%;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
}
.order-item .goods-box {
  height: 160rpx;
  padding: 20rpx 0;
  white-space: nowrap;
}
.order-item .goods-box .goods-item {
  width: 120rpx;
  height: 120rpx;
  display: inline-block;
  margin-right: 24rpx;
}
.order-item .goods-box .goods-img {
  display: block;
  width: 100%;
  height: 100%;
}
.order-item .goods-box-single {
  display: flex;
  padding: 20rpx 0;
}
.order-item .goods-box-single .goods-img {
  border-radius: 50%;
  display: block;
  width: 120rpx;
  height: 120rpx;
}
.order-item .goods-box-single .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 0 30rpx 0 24rpx;
  overflow: hidden;
}
.order-item .goods-box-single .right .title {
  font-size: 0.92rem;
  color: #222222;
  line-height: 1;
}
.order-item .goods-box-single .right .attr-box {
  font-size: 0.8rem;
  color: #aaaaaa;
  padding: 10rpx 12rpx;
}
.order-item .goods-box-single .right .price {
  font-size: 0.92rem;
  color: #222222;
}
.order-item .goods-box-single .right .price:before {
  content: "￥";
  font-size: 0.76rem;
  margin: 0 2rpx 0 8rpx;
}
.order-item .price-box {
  display: flex;
  justify-content: flex-end;
  align-items: baseline;
  padding: 20rpx 30rpx;
  font-size: 0.8rem;
  color: #aaaaaa;
}
.order-item .price-box .num {
  margin: 0 8rpx;
  color: #222222;
}
.order-item .price-box .price {
  font-size: 0.7rem;
  color: #222222;
}
.order-item .price-box .price:before {
  content: "￥";
  font-size: 0.76rem;
  margin: 0 2rpx 0 8rpx;
}
.order-item .action-box {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  height: 100rpx;
  position: relative;
  padding-right: 30rpx;
}
.order-item .action-btn {
  width: 160rpx;
  height: 60rpx;
  margin: 0;
  margin-left: 24rpx;
  padding: 0;
  text-align: center;
  line-height: 60rpx;
  font-size: 0.8rem;
  color: #222222;
  background: #fff;
  border-radius: 100px;
}
.order-item .action-btn:after {
  border-radius: 100px;
}
.order-item .action-btn.recom {
  background: #fff9f9;
  color: #666666;
}
.order-item .action-btn.recom:after {
  border-color: #f7bcc8;
}
.commission {
  margin-top: 20px;
}
.my-unit {
  margin: 20rpx 0;
  background-color: #ffffff;
  font-size: 28rpx;
  -webkit-transform: all 1s;
          transform: all 1s;
}
.my-unit .unit-head {
  padding: 20rpx;
  height: 80rpx;
  box-sizing: border-box;
  border-bottom: 2rpx solid #f5f5f5;
}
.my-unit .unit-body {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.my-unit .unit-body text {
  width: 100%;
  font-size: 28rpx;
  line-height: 55rpx;
}
.my-unit .unit-foot {
  height: 88rpx;
  padding: 0 20rpx;
  border-top: 2rpx solid #f5f5f5;
  border-bottom: none;
  line-height: 88rpx;
}
.my-unit .unit-foot .btn {
  height: 60rpx;
  font-size: 28rpx;
  line-height: 60rpx;
  margin: 14rpx 0;
}
