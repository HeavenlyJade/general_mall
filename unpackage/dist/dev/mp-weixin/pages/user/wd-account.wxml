<view class="content"><view class="type-item b-b"><text class="icon yticon icon-alipay"></text><text class="tit">支付宝</text><label data-event-opts="{{[['tap',[['changePayType',[2]]]]]}}" class="radio" bindtap="__e"><radio value="" color="#fa436a" checked="{{payType==2}}"></radio></label><text class="icon yticon icon-bank"></text><text class="tit">银行卡</text><label data-event-opts="{{[['tap',[['changePayType',[3]]]]]}}" class="radio" bindtap="__e"><radio value="" color="#fa436a" checked="{{payType==3}}"></radio></label></view><view class="row b-b"><text class="tit">联系人</text><input class="input" type="text" placeholder="开户行姓名,或者支付宝姓名" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','username','$event',[]],['withdrawData']]]]]}}" value="{{withdrawData.username}}" bindinput="__e"/></view><view class="row b-b"><text class="tit">账号</text><input class="input" type="text" placeholder="银行卡号或者支付宝账号" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','account','$event',[]],['withdrawData']]]]]}}" value="{{withdrawData.account}}" bindinput="__e"/></view><block wx:if="{{payType==3}}"><view class="row b-b"><text class="tit">银行名称</text><input class="input" type="text" placeholder="银行名称" placeholder-class="placeholder" data-event-opts="{{[['input',[['__set_model',['$0','bankname','$event',[]],['withdrawData']]]]]}}" value="{{withdrawData.bankname}}" bindinput="__e"/></view></block><button data-event-opts="{{[['tap',[['confirm',['$event']]]]]}}" class="add-btn" bindtap="__e">提交</button></view>